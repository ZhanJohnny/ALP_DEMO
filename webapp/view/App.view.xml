<mvc:View xmlns:html="http://www.w3.org/1999/xhtml" xmlns:mvc="sap.ui.core.mvc"	xmlns:m="sap.m" 
        xmlns:t="sap.ui.table" controllerName="IBSO.ALP_DEMO.controller.App" displayBlock="true">
	<m:Page id="page" showHeader="true" enableScrolling="false" class="sapUiContentPadding" title="Data Browser">
		<m:Input placeholder="Enter table name" submit="onSubmit" value="zemp_info" 
		id="tablename" showValueHelp="true" valueHelpRequest="onSearch"></m:Input>
		<m:Button id="search" text="Load" press='onLoad' visible="false"></m:Button>
		<m:Label id="count" text=""></m:Label>
		<m:content>
			<t:Table id="idMyTable" visibleRowCount="20" enableSelectAll="false" threshold="15"
			enableBusyIndicator="true" ariaLabelledBy="title"></t:Table>
		</m:content>
	</m:Page>
</mvc:View>